	// Instantiate the NeedItUtils class. Call the isDatePast method and pass the u_when_needed value
	var niutils = new NeedItUtils();
	var isPast = niutils.isDatePast(current.u_when_needed);
	var isToday = niutils.isToday(current.u_when_needed);
	
	// If the return is true, the user done fucked up and wants to time travel.
	if(isPast){
		gs.addErrorMessage("When needed date select is already passed. Time travel is not yet invented. Please select a proper date and try again.");
		current.setAbortAction(true);
	}
	if(isToday){
		gs.addErrorMessage("Today is no good either. Please select a future date. Always look to the future, it's where the good stuff is. Like apples... And insect steaks!");
		current.setAbortAction(true);
	}
	
})(current, previous);]]></script>
